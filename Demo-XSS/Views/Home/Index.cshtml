@{
    ViewData["Title"] = "Contact Us Page";
}

@model Contact

<div asp-validation-summary="All"></div>

<form asp-action="Index">
    <div class="form-group">
        <label asp-for="Name">Please enter your user name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Email">Please enter your email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="Message">Please enter your message</label>
        <input type="text" class="form-control" asp-for="Message">
    </div>
    <button type="submit" class="mt-md-1 btn btn-primary">Submit</button>
</form>

